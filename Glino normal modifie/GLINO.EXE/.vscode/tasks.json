{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build glino",
            "type": "shell",
            "command": "C:/raylib/w64devkit/bin/g++.exe",
            "args": [
                "*.cpp",
                "-o",
                "glino.exe",
                "-I",
                "C:/raylib/w64devkit/x86_64-w64-mingw32/include",
                "-L",
                "C:/raylib/w64devkit/x86_64-w64-mingw32/lib",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
